- title "Tag"

%p
  %strong Name:
  = @tag.name

%p
  %strong Patients:
- @tag.notes.each do |note|
  - unless note.chart.client_id.blank? or note.chart.client.blank?
    %p= note.chart.client.full_name
  - else
    No Client

%p
  = link_to "Edit", edit_tag_path(@tag)
  |
  = link_to "Destroy", @tag, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", tags_path
