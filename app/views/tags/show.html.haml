- model_class = Tag
.page-header
  %h1
    %i.icon-tags
    = @tag.name

.container
  .row-fluid
    .span12
      %table.table.table-striped{"data-provides" => "rowlink"}
        %thead
          %tr
            %th= "Patient"
            %th= "Chart Note"
            %th= "Date"
        %tbody
          - @tag.notes.each do |note|
            %tr
              %td= note.chart.client.full_name
              %td= truncate(note.details, :length => 80)
              %td= note.date.strftime("%m/%d/%Y")
              %td{:style => 'display:none;'}= link_to "Show", note

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tags_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tag_path(@tag), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tag_path(@tag), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'