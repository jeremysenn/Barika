- model_class = Tag
.page-header
  %h1
    %i.icon-tags
    =t '.title', :default => model_class.model_name.human.pluralize

.container
  %table.table.table-striped{"data-provides" => "rowlink"}
    %thead
      %tr
        %th= "Name"
        %th= "Recent Note"
        %th= "Recent Patient"
        %th= "Actions"
    %tbody
      - @tags.each do |tag|
        %tr
          %td= tag.name
          - unless tag.notes.blank?
            %td= truncate(tag.notes.last.details, :length => 60)
          - else
            %td= 'None'
          - unless tag.notes.blank?
            %td= tag.notes.last.chart.client.full_name
          - else
            %td= 'None'
          %td
            %a{:href => tag_path(tag), :style => 'display:none;'}
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_tag_path(tag), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), tag_path(tag), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'