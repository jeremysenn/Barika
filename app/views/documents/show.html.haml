- model_class = Document
.page-header
  %h1
    %i.icon-file
    =t '.title', :default => model_class.model_name.human
.container
  .row-fluid
    %p
      = @document.file
      = link_to "Download", @document.file_url
    %p
      - if @document.documentable_type == 'Chart'
        %strong Chart
        = link_to @document.documentable.client.full_name, @document.documentable
    - if false
      %p
        %strong= "Belongs to:"
        %br
        = link_to @document.documentable_type, @document.documentable
    - if File.extname(@document.file.path) == '.pdf'
      .span12
        %iframe{:src => serve_document_path(@document), :class => 'span12', :style => "height: 500px;"}

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_document_path(@document), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), document_path(@document), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
