- model_class = Document
- unless @note_documents.blank?
  %table.table.table-striped{"data-provides" => "rowlink"}
    %thead
      %tr
        %th= model_class.human_attribute_name(:title)
        %th= model_class.human_attribute_name(:file)
        %th= "Patient"
        %th= "Details"
        %th= "Date"
    %tbody
      - @note_documents.each do |document|
        %tr
          %td= document.title
          %td= document.file
          %td= document.documentable.chart.client.full_name
          %td= truncate(document.documentable.details, :length => 20)
          %td=l document.documentable.date
          %td{:style => 'display:none;'}= link_to "Show", document_path(document)
- else
  No Note documents yet.

- if false
  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")),
                  :back, :class => 'btn'
    = link_to "New Note Document", new_document_path(:note => true), :class => 'btn btn-success'