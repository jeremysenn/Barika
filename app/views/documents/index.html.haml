- model_class = Document
.page-header
  %h1
    %i.icon-file
    =t '.title', :default => model_class.model_name.human.pluralize
.container
  .row-fluid
    .span12
      .tabbable
        %ul.nav.nav-tabs
          %li.active
            %a{:href => "#user", :data => {:toggle => "tab"}}
              %i.icon-building
              Company
          %li
            %a{:href => "#chart", :data => {:toggle => "tab"}}
              %i.icon-list-alt
              Chart
          %li
            %a{:href => "#note", :data => {:toggle => "tab"}}
              %i.icon-pencil
              Note
      .tab-content
        .tab-pane.active{:id => 'user'}
          = render :partial => 'user_documents'
        .tab-pane{:id => 'chart'}
          = render :partial => 'chart_documents'
        .tab-pane{:id => 'note'}
          = render :partial => 'note_documents'
          
