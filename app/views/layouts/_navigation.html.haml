%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
- if current_user
  %a.brand{:href => root_path}
    .text-error= "BARIKA"
  .nav-collapse.collapse
    %ul.nav.custom
      %li.dropdown{:class => (params[:controller] == "charts" or params[:controller] == "notes") ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %i.icon-list-alt
          Charts
          %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => new_note_path}
              %i.icon-pencil
              New Note
          %li= link_to "All Charts", charts_path
      %li{:class => params[:controller] == "clients" ? "active" : ""}
        %a{:href => clients_path}
          %i.icon-user
          Patients
      %li{:class => params[:controller] == "tags" ? "active" : ""}
        %a{:href => tags_path}
          %i.icon-tags
          Tags
      %li{:class => params[:controller] == "users" ? "active" : ""}
        %a{:href => documents_path}
          %i.icon-file
          Documents
    %ul.nav.pull-right
      %li.divider-vertical
      %li.dropdown
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-cog
            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => edit_user_path(current_user)}
              %strong
                %i.icon-edit
                = current_user.username
              %br
              %small= "Edit settings"
          %li.divider
          %li= link_to "<i class='icon-off'></i> Log out".html_safe, logout_path, :confirm => "Are you sure you want to log out?", :title => "Log out"