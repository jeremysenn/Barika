.popup_overlay_450_225#popup_new
  = form_for note do |f|
    = f.error_messages
    %p
      = f.hidden_field :chart_id, :value => chart.id
    %p
      = f.label :date
      %br
      = f.date_select :date
    %p
      = f.label :details
      %br
      = f.text_area :details, :cols => 55, :rows => 10
    %p
      = f.label :tag_names, "Tags"
      = f.text_field :tag_names, :id => 'tags'
    %p
      = f.submit