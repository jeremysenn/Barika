- model_class = Note
- unless @note.documents.blank?
  %table.table.table-striped{"data-provides" => "rowlink"}
    %thead
      %tr
        %th= model_class.human_attribute_name(:title)
        %th= model_class.human_attribute_name(:file)
        %th= "Patient"
        %th= "Created"
    %tbody
      - @note.documents.each do |document|
        %tr
          %td= document.title
          %td= document.file
          %td= document.documentable.chart.client.full_name
          %td=l document.created_at
          %td{:style => 'display:none;'}= link_to "Show", document_path(document)
- else
  No Note documents yet.

%p= link_to "New Note Document", new_document_path(:note => @note), :class => 'btn btn-small btn-warning'