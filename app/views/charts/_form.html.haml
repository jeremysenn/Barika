= form_for @chart, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :client_id, :class => 'control-label'
    .controls
      = f.select :client_id, current_user.clients.sort_by{|c| [c.last]}.collect{|c| [ c.full_name, c.id ] }
  = f.fields_for :notes do |note_form|
    .control-group
      = note_form.label :date, :class => 'control-label'
      .controls
        %div{:id => "datepicker", :class => "input-append date"}
          = note_form.text_field :date, "data-format" => "yyyy-MM-dd", :value => Date.today, :class => 'input-small', :default => Time.now
          %span{:class => "add-on"}
            %i.icon-calendar
    .control-group
      = note_form.label :details, :class => 'control-label'
      .controls
        = note_form.text_area :details, :class => 'text_area span5', :rows => 5
    .control-group
      = note_form.label "Tags", :class => 'control-label'
      .controls
        = note_form.text_field :tag_names, :class => 'text_field', :id => 'tags'

        
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), charts_path, :class => 'btn'


:javascript

  $('#datepicker').datepicker({
    format: 'yyyy-mm-dd',
    todayHighlight: true
  });

  var tags = "#{@tags.join(',')}";
  $('#tags').tagit({
    availableTags: tags.split(','),
    allowSpaces: true
  });

